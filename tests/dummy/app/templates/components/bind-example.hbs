<div class="scenario-bind clearfix">
  <AnimatedContainer>
    {{#animated-value this.counter rules=this.rules duration=1000 as |v|}}
      <span class="left-count">{{v}}</span>
    {{/animated-value}}
  </AnimatedContainer>

  {{#if this.showBoth}}
    <AnimatedContainer>
      {{#animated-value this.counter rules=this.rules2 duration=1000 as |v|}}
        <span class="right-count">{{v}}</span>
      {{/animated-value}}
    </AnimatedContainer>
  {{/if}}

  <button {{action "increment"}}>+</button>
  <button {{action "decrement"}}>-</button>
  <input
    type="checkbox"
    aria-label="Toggle both left and right value visibility"
    checked={{this.showBoth}}
    {{on "change" (fn (mut this.showBoth) (not this.showBoth))}}
  >
</div>
