<div class="scenario-two-lists2 clearfix">
  <div class="controls">
    <label>Bounce back <input type="checkbox" checked={{this.bounceBack}} onchange={{action (mut this.bounceBack) (not this.bounceBack)}}></label>
  </div>

  <AnimatedContainer>
    {{#animated-each this.leftItems use=this.transition as |item|}}
      <div>
        {{item.id}}
        <button {{action "move" item}}>&rarr;</button>
      </div>
    {{/animated-each}}
  </AnimatedContainer>

  <AnimatedContainer>
    {{#animated-each this.rightItems use=this.transition as |item|}}
      <div>
        <button {{action "move" item}}>&larr;</button>
        {{item.id}}
      </div>
    {{/animated-each}}
  </AnimatedContainer>

</div>