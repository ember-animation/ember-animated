<div class="hero-detail">
  <LinkTo @route="demos.hero.index">Back to list</LinkTo>

  <h2>{{this.model.name}}</h2>

  <AnimatedContainer>
    {{#animated-value this.model use=this.transition duration=1000 as |m|}}
      <div class="hero-detail-image">
        <img alt="avatar for {{m.name}}" src={{m.avatarUrl}}>
        <span>Big Image</span>
      </div>
    {{/animated-value}}
  </AnimatedContainer>
  <p>
    This is after the image.
  </p>
</div>