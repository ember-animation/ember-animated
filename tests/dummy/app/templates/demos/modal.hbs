{{#if this.message}}
  <div class="scenario-modal--container">
    <AnimatedValue @value="background" @use={{this.backgroundTransition}} @initialInsertion={{true}} @finalRemoval={{true}}>
      <div class="scenario-modal--background" {{action this.showMessage ""}}></div>
    </AnimatedValue>
    <AnimatedValue @value={{this.message}} @use={{this.dialogTransition}} @initialInsertion={{true}} @finalRemoval={{true}} as |currentMessage|>
      <div class="scenario-modal--contents">
        <h3>Alert! {{currentMessage}}</h3>
      </div>
    </AnimatedValue>
  </div>
{{/if}}

<button {{action this.showRandomMessage}}>Show</button>
<button disabled={{not this.lastMessage}} {{action this.showPreviousMessage}}>Show Previous</button>


<AnimatedOrphans />
