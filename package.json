{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-animation/ember-animated.git"
  },
  "workspaces": [
    "addon",
    "docs",
    "test-app"
  ],
  "scripts": {
    "prepare": "cd addon && pnpm run build",
    "release": "release-it",
    "test": "cd test-app && pnpm run test:ember"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "release-it": "^14.14.2",
    "release-it-lerna-changelog": "^4.0.1",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "overrides": {
      "ember-modal-dialog": "4.0.0",
      "@types/ember": "4.0.0",
      "@types/eslint": "8.4.1"
    }
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm install",
      "after:release": "cd docs && pnpm run deploy"
    },
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "release-it-yarn-workspaces": {
        "publish": false,
        "workspaces": [
          "addon"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "docs/package.json",
            "test-app/package.json"
          ],
          "versionUpdates": [
            "docs/package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "12.22.10",
    "npm": "8.7.0"
  }
}
